import java.util.Scanner;
class Codechef {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int N = sc.nextInt(); 
        int M = sc.nextInt(); 
         int happyCustomers;
      if (N < (M - N)) {
            happyCustomers = N;
        } else {
            happyCustomers = M - N;
        }

        System.out.println(happyCustomers);

        sc.close();
    }
}
