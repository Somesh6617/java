import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
	    Scanner sc=new Scanner(System.in);
	    int t=sc.nextInt();
	    while(t-->0)
	    {
	        int n=sc.nextInt();
	        int x=sc.nextInt();
	        int tot = (int)Math.ceil((double)n / 6);
	        System.out.println(tot*x);
	    }
	}
}
