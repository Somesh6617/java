import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner sc=new Scanner(System.in);
		int t=sc.nextInt();
		while(t-->0)
		{
		    int n=sc.nextInt(),b=sc.nextInt(),c=sc.nextInt();
		    while(n>=b) n=n-b+c;
		    System.out.println(n);
		}

	}
}
