class Solution {
    public boolean scoreBalance(String s) {
    s=s.toLowerCase();
    int c1=0,c2=0;
    for(int i=0;i<s.length();i++)
    {
         c1+=s.charAt(i)-'a'+1;  
    }
    for(int i=0;i<s.length();i++)
    {
        c2+=s.charAt(i)-'a'+1;
        if(c2==(c1-c2))
            return true;
    }
    return false;
    }
}
