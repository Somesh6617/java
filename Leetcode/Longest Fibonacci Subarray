class Solution {
    public int longestSubarray(int[] nums) {
    int c=nums.length,si=2,ei=2;
    if(c<3)
        return c;
    for(int i=2;i<nums.length;i++)
    {
        if(nums[i]==nums[i-1]+nums[i-2])
            si++;
        else
            si=2;
        ei=Math.max(si,ei);
    }
        return ei;
    }
}
