import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
        Scanner sc=new Scanner (System.in);
        int t=sc.nextInt();
        while(t-->0)
        {
            int n=sc.nextInt(),x=sc.nextInt();
            System.out.println(x%2==0?(n/2)-1:((n+1)/2)-1);
        }
	}
}
