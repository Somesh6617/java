// This for loop is used for line, where i denotes the line
for (int i = 1; i <= n; i++) { 
    // Inner loop to print leading spaces for proper alignment
    for (int j = 1; j <= n - i; j++) { 
        System.out.print(" "); // Print spaces to center-align the pyramid
    } 

    // Inner loop to print increasing numbers from 1 to i
    for (int j = 1; j <= i; j++) { 
        System.out.print(j + " "); // Print numbers sequentially in increasing order
    } 

    // Inner loop to print decreasing numbers from i-1 to 1
    for (int j = i - 1; j >= 1; j--) { 
        System.out.print(j + " "); // Print numbers sequentially in decreasing order
    } 

    // Move to the next line after completing the current line
    System.out.println(); 
}
