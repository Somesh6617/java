import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner sc=new Scanner(System.in);
		int t=sc.nextInt();
        while(t-->0)
        {
            int a=sc.nextInt(),b=sc.nextInt();
            for(int i=0;i<a/2;i++) System.out.print(1);
            for(int i=0;i<b;i++) System.out.print(2);
            for(int i=0;i<a/2;i++) System.out.print(1);
            System.out.println();
        }
	}
}
